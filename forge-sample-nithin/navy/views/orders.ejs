<% include ./partials/header %>

<div class="container">


<table class="table">
    <thead>
      <tr class="bg-dark" style="color: white; background-color: black">
        <th scope="col">#</th>
        <th scope="col">Ordername</th>
        <th scope="col">OrderId</th>
        <th scope="col">Description</th>
        <th scope="col">Status</th>
      </tr>
    </thead>
  
    <tbody>

        <%var i = 1%>
        <% orders.forEach(function(order){ %>
          <tr>
              <th scope="row"><%=i%></th>
              <td><%= order.NSN%></td>
              <td><%= Math.floor(Math.random() * 12323) %></td>
              <td><%= order.description %></td>
              <td>
                <p>
                  <a href="/orders/<%=order.itemId%>" data-ajax="false" class="btn btn-primary"><i class="fas fa-info-circle"></i> More Info</a>  
                </p>
              </td>
          </tr>
        <% i++; %>    
        <% }); %>
      </tbody>
    </div>
  
  </table> 

  <% include ./partials/footer %>