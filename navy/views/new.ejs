<%include partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Place Your Order</h1>
        <div style="width:40%; margin: 20px auto">
                
            
            <form action = "/orders" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="owneremail" placeholder="Manufacturer's email"></input>
                </div>   
                
                
                <div class="form-group">
                    <input class="form-control" type="text" name="ordername" placeholder="Name of the order"></input>
                </div>   
                
              
                 <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Description"></input>
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="number" name="quantity" placeholder="Quantity" min="1" step="1"></input>
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="number" name="range" placeholder="Range in meters" min="1" step="1"></input>
                </div>
            
                
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Place Order</button>
                </div>
                
            </form>
            <a href="/orders">Go back</a>
            
        </div>
        
    </div>
    
</div>


<%include partials/footer %>